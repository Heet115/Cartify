<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/glue_600"
                android:endColor="@color/glue_800"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/glue_400"
                android:endColor="@color/glue_600"
                android:type="linear" />
        </shape>
    </item>
</selector>