<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadow_medium" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <!-- Card Background -->
            <item android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/sky_blue_50" />
                    <corners android:radius="18dp" />
                    <stroke android:width="2dp" android:color="@color/primary_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadow_light" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <!-- Card Background -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="18dp" />
                    <stroke android:width="1dp" android:color="@color/sky_blue_100" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>