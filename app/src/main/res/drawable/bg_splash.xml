<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/sky_blue_300"
                android:centerColor="@color/sky_blue_500"
                android:endColor="@color/sky_blue_800"
                android:type="linear" />
        </shape>
    </item>
    <!-- Overlay Pattern -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>